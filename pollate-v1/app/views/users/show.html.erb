<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<div>
  <p>Polls this user is in:</p>
  <ul>
    <% @user.polls.each do |poll| %>
      <li><%= link_to poll.title, poll %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'Edit', edit_user_path(@user) %>
